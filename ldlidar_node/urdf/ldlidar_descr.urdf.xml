<?xml version="1.0"?>
<robot name="rc_car">

    <link name="base_link">
        <visual>
            <origin xyz="0.1575 0 0.095" rpy="0 0 0"/>
            <geometry>
                <box size="0.575 0.26 0.1" />
            </geometry>
            <material name="Cyan">
                <color rgba="0.203125 0.3125 0.74609375 0.9"/>
            </material>
        </visual>
    </link>

    <joint name="base_laser_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_laser"/>
        <origin xyz="0.35 0 0.19" rpy="0 0 0" />
    </joint>

    <link name="base_laser">
        <visual>
            <geometry>
                <mesh filename="package://ldlidar_node/urdf/model/LD19.stl" scale="0.001 0.001 0.001" />
            </geometry>
            <material name="ldlidar_mat">
                <color rgba="0.8 0.8 0.8 1"/>
            </material>
        </visual>
    </link>

    <!-- Left Steering Link -->
    <link name="steering_left_link">
        <visual>
            <geometry>
                <cylinder length="0.02" radius="0.02"/>
            </geometry>
            <material name="Gray">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>
        <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
        </inertial>
    </link>

    <!-- Right Steering Link -->
    <link name="steering_right_link">
        <visual>
            <geometry>
                <cylinder length="0.02" radius="0.02"/>
            </geometry>
            <material name="Gray">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>
        <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
        </inertial>
    </link>

    <!-- Left Steering Joint -->
    <joint name="steering_left_joint" type="revolute">
        <parent link="base_link"/>
        <child link="steering_left_link"/>
        <origin xyz="0.35 0.165 0.075" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-0.6" upper="0.6" effort="10" velocity="2"/>
    </joint>

    <!-- Right Steering Joint -->
    <joint name="steering_right_joint" type="revolute">
        <parent link="base_link"/>
        <child link="steering_right_link"/>
        <origin xyz="0.35 -0.165 0.075" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-0.6" upper="0.6" effort="10" velocity="2"/>
    </joint>

    <!-- Front Left Wheel -->
    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.07" radius="0.075"/>
            </geometry>
            <material name="Black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.07" radius="0.075"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
        </inertial>
    </link>

    <!-- Modified Front Left Wheel Joint -->
    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="steering_left_link"/>
        <child link="front_left_wheel"/>
        <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- Front Right Wheel -->
    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.07" radius="0.075"/>
            </geometry>
            <material name="Black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.07" radius="0.075"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
        </inertial>
    </link>

    <!-- Modified Front Right Wheel Joint -->
    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="steering_right_link"/>
        <child link="front_right_wheel"/>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- Rear Left Wheel -->
    <link name="rear_left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.07" radius="0.075"/>
            </geometry>
            <material name="Black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.07" radius="0.075"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
        </inertial>
    </link>

    <joint name="rear_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_left_wheel"/>
        <origin xyz="0 0.165 0.075" rpy="1.5708 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- Rear Right Wheel -->
    <link name="rear_right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.07" radius="0.075"/>
            </geometry>
            <material name="Black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.07" radius="0.075"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
        </inertial>
    </link>

    <joint name="rear_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_right_wheel"/>
        <origin xyz="0 -0.165 0.075" rpy="1.5708 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

</robot>